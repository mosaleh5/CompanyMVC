    <div class="from-group">
        <label class="col-form-lable" asp-for="Email"></label>
        <input type="email" asp-for="Email" class="from-control" />

          <span asp-validation-for="Email" class="text-danger"></span>

        <br />
    </div>    <div class="from-group">
        <label class="col-form-lable" asp-for="Address"></label>
        <input type="text" asp-for="Address" class="from-control" />

          <span asp-validation-for="Address" class="text-danger"></span>

        <br />
    </div>    <div class="from-group">
        <label class="col-form-lable" asp-for="HiringDate"></label>
        <input type="date" asp-for="HiringDate" class="from-control" />

          <span asp-validation-for="HiringDate" class="text-danger"></span>

        <br />
    </div>  
    <div class="from-group">
        <label class="col-form-lable" asp-for="Image"></label>
        <input type="image" asp-for="Image" class="from-control" />

          <span asp-validation-for="ImageUrl" class="text-danger"></span>

        <br />
    </div>
    <div class="from-group">
        <label class="col-form-lable" asp-for="Department"></label>
        <select class="col-from-label" asp-for="DepartmentId" asp-items="@departments">
    <option value="@null">---Select Department</option>
</select>
        <br />
    </div>

    <div class="from-group">
        <label class="col-form-lable" asp-for="Age"></label>
        <input type="number" asp-for="Age" class="from-control" />

          <span asp-validation-for="Age" class="text-danger"></span>

        <br />
    </div>

    <div class="from-group">
        <label class="col-form-lable" asp-for="Image"></label>
        <input type="image" asp-for="Image" class="from-control" />

        <span asp-validation-for="Image" class="text-danger"></span>

        <br />
    </div>
    <div class="mt-5 alert alert-warning">
        <h3>@ViewBag.Message</h3>
    </div>
    <div class="mt-5 alert alert-primary">
        <h3>@ViewData["TextMessage"]</h3>
    </div>
    <div class="mt-5 alert alert-dark">
        <h3>@TempData["TextMessage"]</h3>
    @Html.ValidationSummary(true, "EmployeeErrors", "Error while Adding Employee");
    <br />

    <input type="Submit" value="Create" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>

</from>



