@model IEnumerable<EmployeeDto>
@{

    ViewData["Title"] = "Index";
}
<h1>All Employees</h1>
<br />
<a asp-action="Create" asp-action="Create" class="btn btn-primary">Create New Employee</a>
<br />
<br />

<div class="row justify-content-center align-items-center mt-5">
    <form class="row col-8 offest-2" asp-action="Index">
    <div class="col-8">
        <input type="text" class="from-control"name="searchInp" placeholder="Search By Name" />

    </div>
    <div class="col-4">
        <input type="submit" value="Search"  class="btn btn-successs" />

    </div>
    </form>
</div>
<div class="mt-5 alert alert-warning">
    <h3>@ViewBag.Message</h3>
</div
<div class="mt-5 alert alert-primary">
    <h3>@ViewData["TextMessage"]</h3>
</div>
<div class="mt-5 alert alert-dark">
    <h3>@TempData["TextMessage"]</h3>
</div>
@if (Model.Count() > 0)

{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Address)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
               @*  <th>@Html.DisplayNameFor(D => D.Id)</th>
 *@                <th>@Html.DisplayNameFor(D => D.HiringDate)</th>
                @* <th>@Html.DisplayNameFor(D => D.Department)</th>
 *@
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.ImageUrl)</th>
                @* <th>@Html.DisplayNameFor(D => D.DepartmentId)</th>
 *@
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>

        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Address</td>
                    <td>@employee.Age</td>
                  @*   <td>@employee.Id</td>
 *@                    <td>@employee.HiringDate</td>
                    <td>@employee.Department</td>
                    <td>@employee.Email</td>
                    <td>@employee.ImageUrl</td>
                    <td>@employee.DepartmentId</td>
                    <partial name="_ActionButtonsPartialView" model="@employee.DepartmentId.ToString()" />

            
                </tr>
            }


        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is on Employee</h3>
    </div>
}

