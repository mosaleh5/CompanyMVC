@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "AddRemoveUsers";
}

<h2 class="my-3">Add/Remove Users</h2>

<form asp-action="UpdateUserRoles" asp-route-roleId="@Model[0].UserId">
    <div>
        @for (var i = 0; i < Model.Count; i++)
        {
            <div class="form-group">
                <input asp-for="@Model[i].IsSelected" />
                <label asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
            </div>
            <input type="hidden" asp-for="@Model[i].UserId" />
            <input type="hidden" asp-for="@Model[i].UserName" />
        }
    </div>
    <div class="text-right my-3">
        <input type="submit" value="Update Roles" class="btn-success" />
        <a asp-action="Index" controller="Roles" asp-route-id="" class="btn-light">Cancel</a>
    </div>
</form>
